{
  "name": "@blackwall/database",
  "type": "module",
  "module": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./migrate": "./src/migrate.ts",
    "./schema": "./src/schema/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "typecheck": "bun run --bun tsc --noEmit",
    "db:generate": "bun --env-file=../../.env run --bun drizzle-kit generate",
    "db:migrate": "bun --env-file=../../.env run --bun drizzle-kit migrate",
    "db:drop": "bun --env-file=../../.env run src/drop.ts"
  },
  "dependencies": {
    "@blackwall/shared": "workspace:*",
    "drizzle-orm": "^1.0.0-beta.12-a5629fb",
    "drizzle-zod": "^1.0.0-beta.12-a5629fb",
    "hono": "^4.11.5",
    "nanoid": "^5.1.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^1.0.0-beta.12-a5629fb"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.18.0",
    "better-auth": "^1.4.17"
  }
}
