{
  "name": "@blackwall/backend",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "typecheck": "bun run --bun tsc --noEmit",
    "lint": "bun run --bun oxlint",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "bun run --bun drizzle-kit generate",
    "db:migrate": "bun run --bun drizzle-kit migrate",
    "db:drop": "bun run src/db/drop.ts"
  },
  "dependencies": {
    "@blackwall/shared": "workspace:*",
    "@hono/zod-validator": "^0.7.6",
    "@tiptap/core": "^3.18.0",
    "better-auth": "^1.4.17",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^1.0.0-beta.12-a5629fb",
    "drizzle-zod": "^1.0.0-beta.12-a5629fb",
    "hono": "^4.11.5",
    "nanoid": "^5.1.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@libsql/client": "^0.17.0",
    "@types/bun": "latest",
    "drizzle-kit": "^1.0.0-beta.12-a5629fb"
  }
}